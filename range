for _,v in pairs(game:GetDescendants()) do
    if v:IsA("NumberValue") and v.Name == "Range" then
        v.Value = 1000000
        print("Set Range of", v.Parent.Name, "to", v.Value)
    end
end

-- auto update nếu game spawn thêm vũ khí mới
game.DescendantAdded:Connect(function(v)
    if v:IsA("NumberValue") and v.Name == "Range" then
        v.Value = 1000000
        print("Auto-set Range of", v.Parent.Name, "to", v.Value)
    end
end)
